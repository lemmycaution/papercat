<div class="container">
  <div class="sm-col-6 md-col-5 mx-auto mt4 ">

    <%= render 'devise/shared/logo' %>
    
    <h2 class="center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "bg-white rounded m1 p3" }) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "block col-12 mb2 field" %>
    </div>

    <div class="actions">
      <button class="col-12 btn btn-big btn-primary">Send me<br>reset password instructions</button>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>