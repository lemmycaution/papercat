<div class="container">
  <div class="sm-col-6 md-col-5 mx-auto mt4 ">
    
    <%= render 'devise/shared/logo' %>
    
    <h2 class="center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white rounded m1 p3" }) do |f| %>
    
    <% if alert %><p id="error_explanation"><%= alert %></p><% end %>
    
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "block col-12 mb2 field" %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: "block col-12 mb2 field" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <label class="block mb2">
      <%= f.check_box :remember_me %> Remember me
    </label>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "col-12 btn btn-big btn-primary" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

